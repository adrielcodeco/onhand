{
  "name": "@onhand/framework",
  "version": "1.1.28",
  "description": "framework is part of the @onhand framework",
  "author": "Codeco <adrielcodeco@hotmail.com>",
  "homepage": "https://github.com/adrielcodeco/onhand/tree/main/packages/framework#readme",
  "license": "ISC",
  "directories": {
    "lib": "#"
  },
  "files": [
    "#"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrielcodeco/onhand.git"
  },
  "scripts": {
    "build": "yarn clean && ttsc -b tsconfig.build.json",
    "clean": "rimraf '#' coverage yarn*.log",
    "test": "jest --coverage --passWithNoTests",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "yarn:pack": "yarn pack && cpy 'onhand-*.tgz' '../../releases'"
  },
  "bugs": {
    "url": "https://github.com/adrielcodeco/onhand/issues"
  },
  "dependencies": {
    "@onhand/accesscontrol": "^1.1.28",
    "@onhand/business": "^1.1.28",
    "@onhand/openapi": "^1.1.28",
    "axios": "^0.21.1",
    "class-validator": "^0.13.1",
    "cls-hooked": "^4.2.2",
    "inversify": "^5.0.5",
    "lodash": "^4.17.21",
    "moment": "^2.27.0",
    "node-cache": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "short-uuid": "^4.1.0",
    "winston": "^3.3.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "moduleNameMapper": {
      "^#/(.*)$": "<rootDir>/src/$1",
      "^$/(.*)$": "<rootDir>/tests/$1"
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "./tests/.+.ts$",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.{js,ts}"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "coverageReporters": [
      "lcov"
    ]
  },
  "devDependencies": {
    "@types/cls-hooked": "^4.3.3"
  }
}
